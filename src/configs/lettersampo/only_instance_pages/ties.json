{
  "id": "ties",
  "endpoint": {
    "url": "https://ldf.fi/ckcc/sparql",
    "useAuth": false,
    "prefixesFile": "SparqlQueriesPrefixes.js"
  },
  "sparqlQueriesFile": "SparqlQueriesTies.js",
  "baseURI": "http://ldf.fi/lssc",
  "URITemplate": "<BASE_URI>/ties/<LOCAL_ID>",
  "resultClasses": {
    "ties": {
      "instanceConfig": {
        "propertiesQueryBlock": "tiePropertiesInstancePage",
        "instancePageResultClasses": {
          "instancePageTable": {
            "tabID": 0,
            "component": "InstancePageTable",
            "tabPath": "table",
            "tabIcon": "CalendarViewDay"
          },
          "tieInstancePageLetterNetwork": {
            "tabID": 1,
            "component": "Network",
            "tabPath": "letter-network",
            "tabIcon": "BubbleChart",
            "pageType": "instancePage",
            "sparqlQuery": "tieLinksQuery",
            "sparqlQueryNodes": "tieNodesQuery",
            "useNetworkAPI": true,
            "limit": 32,
            "optimize": 1.5,
            "preprocess": "preprocessTie",
            "style": [
              {
                "selector": "node",
                "style": {
                  "shape": "ellipse",
                  "font-size": 10,
                  "background-color": "data(color)",
                  "label": "data(prefLabel)",
                  "height": "data(size)",
                  "width": "data(size)"
                }
              },
              {
                "selector": "edge",
                "style": {
                  "width": "data(weight)",
                  "line-color": "data(color)",
                  "curve-style": "bezier",
                  "content": "data(prefLabel)",
                  "color": "hsl(30, 64%, 35%)",
                  "target-arrow-shape": "triangle",
                  "target-arrow-color": "data(color)",
                  "font-size": "8",
                  "text-valign": "center",
                  "edge-text-rotation": "autorotate",
                  "text-background-opacity": 1,
                  "text-background-color": "white",
                  "text-background-shape": "roundrectangle"
                }
              }
            ],
            "layout": {
              "name": "cose",
              "idealEdgeLength": 100,
              "nodeOverlap": 20,
              "refresh": 20,
              "fit": true,
              "padding": 30,
              "randomize": false,
              "componentSpacing": 100,
              "nodeRepulsion": 400000,
              "edgeElasticity": 100,
              "nestingFactor": 5,
              "gravity": 80,
              "numIter": 1347,
              "initialTemp": 200,
              "coolingFactor": 0.95,
              "minTemp": 1
            }
          },
          "tieInstancePageLettersByYear": {
            "tabID": 2,
            "component": "ApexCharts",
            "pageType": "instancePage",
            "createChartData": "createMultipleLineChartData",
            "stroke": {
              "curve": "straight",
              "width": 2
            },
            "fill": {
              "type": "gradient",
              "gradient": {
                "shadeIntensity": 1,
                "inverseColors": false,
                "opacityFrom": 0.6,
                "opacityTo": 0.05,
                "stops": [
                  20,
                  60,
                  100,
                  100
                ]
              }
            },
            "title": "Letters by year",
            "xaxisTitle": "Year",
            "xaxisType": "category",
            "xaxisTickAmount": 20,
            "yaxisTitle": "Number of letters",
            "tabPath": "letters-by-year",
            "tabIcon": "ShowChart",
            "sparqlQuery": "tieLettersQuery",
            "resultMapper": "mapMultipleLineChart",
            "resultMapperConfig": {
              "fillEmptyValues": true
            }
          },
          "instancePageExport": {
            "tabID": 3,
            "component": "Export",
            "tabPath": "export",
            "tabIcon": "CloudDownload",
            "pageType": "instancePage"
          }
        }
      }
    }
  },
  "properties": [
    {
      "id": "prefLabel1",
      "valueType": "object",
      "makeLink": true,
      "externalLink": false,
      "sortValues": true,
      "numberedList": false
    },
    {
      "id": "prefLabel2",
      "valueType": "object",
      "makeLink": true,
      "externalLink": false,
      "sortValues": true,
      "numberedList": false
    },
    {
      "id": "ego",
      "valueType": "object",
      "makeLink": true,
      "externalLink": true,
      "sortValues": true,
      "numberedList": false
    },
    {
      "id": "alter",
      "valueType": "object",
      "makeLink": true,
      "externalLink": true,
      "sortValues": true,
      "numberedList": false
    },
    {
      "id": "numLetters",
      "valueType": "string",
      "makeLink": false,
      "externalLink": false,
      "sortValues": false,
      "numberedList": false
    },
    {
      "id": "letter",
      "valueType": "object",
      "makeLink": true,
      "externalLink": false,
      "sortValues": false,
      "numberedList": true
    },
    {
      "id": "other",
      "valueType": "object",
      "makeLink": true,
      "externalLink": false,
      "sortValues": false,
      "numberedList": true
    }
  ]
}